    .btn-group
      button.btn.btn-sm.btn-info(ng-model="main.filtering.expand" uib-btn-checkbox) 
        i.fa(ng-class='main.filtering.expand ? "fa-toggle-on" : "fa-toggle-off"')
        |  
        span Expand all


    .btn-group
      button.btn.btn-sm.btn-primary(ng-model="main.filtering.showScreenshots" uib-btn-checkbox) 
        i.fa(ng-class='main.filtering.showScreenshots ? "fa-toggle-on" : "fa-toggle-off"')
        |  
        span Show screenshots

      button.btn.btn-sm.btn-success(ng-model="main.filtering.showPassed" uib-btn-checkbox) 
        i.fa(ng-class='main.filtering.showPassed ? "fa-toggle-on" : "fa-toggle-off"')
        |  
        span Show passed expectations

      button.btn.btn-sm.btn-danger(ng-model="main.filtering.showFailed" uib-btn-checkbox) 
        i.fa(ng-class='main.filtering.showFailed ? "fa-toggle-on" : "fa-toggle-off"')
        |  
        span Show failed expectations 

    .btn-group
      button.btn.btn-sm.btn-default(ng-model="main.filtering.showSpecScreenshots" uib-btn-checkbox) 
        i.fa(ng-class='main.filtering.showSpecScreenshots ? "fa-toggle-on" : "fa-toggle-off"')
        |  
        span Show after spec done screenshots

